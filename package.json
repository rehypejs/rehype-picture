{
  "name": "rehype-picture",
  "version": "1.0.1",
  "description": "Wrap images in pictures with rehype",
  "license": "MIT",
  "keywords": [
    "rehype",
    "hast",
    "html",
    "img",
    "picture"
  ],
  "repository": "rehypejs/rehype-picture",
  "bugs": "https://github.com/rehypejs/rehype-picture/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "hast-util-is-element": "^1.0.0",
    "hastscript": "^3.0.1",
    "replace-ext": "^1.0.0",
    "unist-util-visit": "^1.1.1"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.0.0",
    "prettier": "^1.13.7",
    "rehype-parse": "^5.0.0",
    "rehype-stringify": "^4.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "unified": "^7.0.0",
    "xo": "^0.21.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js --bare -s rehypePicture > rehype-picture.js",
    "build-mangle": "esmangle rehype-picture.js > rehype-picture.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "rehype-picture.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
